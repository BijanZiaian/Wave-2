month = input("Enter a month: ")

if month == "January":
    print ("This month has 31 days.")
elif month == "February":
    print ("This month has 28 or 29 days.")
elif month == "March":
    print ("This month has 31 days.")    
elif month == "April":
    print ("This month has 30 days.")
elif month == "May":
    print ("This month has 31 days.")    
elif month == "June":
    print ("This month has 30 days.")   
elif month == "July":
    print ("This month has 31 days.") 
elif month == "August":
    print ("This month has 31 days.")
elif month == "September":
    print ("This month has 30 days.")    
elif month == "October":
    print ("This month has 31 days.")
elif month == "November":
    print ("This month has 30 days.")    
elif month == "December":
    print ("This month has 31 days.")
else:
    print("Please enter a proper month(Remember spelling is important!!)")
